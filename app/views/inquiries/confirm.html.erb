<div class="container">

	<div class="row text-center shadow-box">
       <h2>お問い合わせ内容確認</h2>

       <%= form_for(@inquiry) do |f| %>
         <div class="inquiry-form">
         	 <%= f.label "タイトル" %><br>
			 <%= f.hidden_field :title %>
			 <%= @inquiry.title %>
		 </div>
		 <div class="inquiry-form">
		     <%= f.label "本文" %><br>
			 <%= f.hidden_field :body %>
			 <%= @inquiry.body %>
	     </div>

         <div class="inquiry-form">
		 	<%= f.submit '送信', :class => 'btn btn-primary' %>
		 </div>
	   <% end %>
    </div>

</div>
<%= render 'games/modal_dialog', search: @search %>

