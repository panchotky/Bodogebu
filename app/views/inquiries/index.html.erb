<div class="container">
	<div class="row">

     <h2 class="page-title">お問い合わせ一覧</h2>

          <table class="table inquiry-table">
		  	   <thead>
		  	   	      <tr>
		  	   	      	  <th>ユーザー名</th>
		  	   	      	  <th>タイトル</th>
		  	   	      	  <th>詳細</th>
		  	   	      	  <th>チェック欄</th>
		  	   	      </tr>
		  	   </thead>

	        <% @inquiries.each do |inquiry| %>
		  	   <tbody>
		  	   	      <tr>
		  	   	      	  <th><%= inquiry.user.name %></th>
		  	   	      	  <th><%= inquiry.title %></th>
		  	   	      	  <th><%= link_to '詳細', inquiry_path(inquiry.id), class: "btn btn-success btn-sm" %></th>
		  	   	      	  <th>
		  	   	      	  	  <% if inquiry.check == true %>
		  	   	      	  	    <p class="btn btn-primary btn-sm">対応済</p>
		  	   	      	  	  <% elsif inquiry.check == false %>
		  	   	      	  	    <p class="btn btn-danger btn-sm">未対応</p>
		  	   	      	  	  <% end %>
		  	   	      	  </th>
		  	   	      </tr>
		  	   </tbody>
	   		<% end %>
	     </table>

    </div>
</div>
<%= render 'games/modal_dialog', search: @search %>