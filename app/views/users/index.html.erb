<div class="container">
	<div class="row">

     <h2 class="page-title">登録ユーザー 一覧</h2>

          <table class="table">
		  	   <thead>
		  	   	      <tr>
		  	   	      	  <th>イメージ</th>
		  	   	      	  <th>ユーザー名</th>
		  	   	      	  <th>リンク</th>
		  	   	      	  <th>レビュー数</th>
		  	   	      	  <th>強制退会</th>
		  	   	      </tr>
		  	   </thead>

	        <% @users.each do |user| %>
		  	   <tbody>
		  	   	      <tr>
		  	   	      	  <th><%= attachment_image_tag user, :image, :fill, 80, 80, fallback: '/assets/no_image.jpg', size:'80x80' %></th>
		  	   	      	  <th><%= user.name %></th>
		  	   	      	  <th> <%= link_to 'Library', user_path(user.id), class: "btn btn-success" %></th>
		  	   	      	  <th><%= user.reviews.count %> 件</th>
		  	   	      	  <th><%= link_to '追放', user_path(user.id), method: :delete, "data-confirm" => "本当に追放してもいいですか。", class: "btn btn-danger" %></th>
		  	   	      </tr>
		  	   </tbody>
	   		<% end %>
	     </table>

    </div>
</div>
<%= render 'games/modal_dialog', search: @search %>