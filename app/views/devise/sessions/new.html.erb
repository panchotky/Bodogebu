<body class="back-image">
<div class="container">
  <div class="row text-center">

    <div class="col-lg-3">
    </div>

    <div class="col-lg-6 shadow-box white">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="sign-up-field">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "ニックネーム", class: "form-text" %>
        </div>

        <div class="sign-up-field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "パスワード", class: "form-text" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="sign-up-field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "パスワードを保存" %>
          </div>
        <% end %>

        <div class="actions sign-up-field">
          <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>


  </div>
</div>
